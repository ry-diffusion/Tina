
import { Palette } from "std-widgets.slint";

// Re-export globals for Rust integration
export {
    AccountManagement,
    FailureManagment,
    AddAccountManagement,
    UserProfile,
    AppSettings,
    ChatManagement,
    Account,
    ChatItem,
    Scene,
    SidebarTab,
} from "globals.slint";

// Import scenes
import {
    InitScene,
    QRLoginScene,
    SyncingScene,
    InAppScene,
    ErrorScene,
} from "scenes/scenes.slint";
import { Scene } from "globals.slint";

// ============== MAIN WINDOW ==============

export component Tina inherits Window {
    title: "Tina";
    min-width: 900px;
    min-height: 600px;
    preferred-width: 1200px;
    preferred-height: 800px;
    in-out property <Scene> current-scene: Scene.Init;
    if current-scene == Scene.Init: InitScene { }
    if current-scene == Scene.QRLogin: QRLoginScene { }
    if current-scene == Scene.Syncing: SyncingScene { }
    if current-scene == Scene.InApp: InAppScene { }
    if current-scene == Scene.FatalError: ErrorScene { }
}
